{
  "id": null,
  "title": "Cockpit Metrics — Live vs Ledger",
  "tags": ["cockpit", "metrics", "drift"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "15s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Completed Tasks — Live vs Ledger",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "cockpit_completed_tasks", "legendFormat": "live" },
        { "expr": "cockpit_completed_tasks_ledger", "legendFormat": "ledger" }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 18, "h": 8 }
    },
    {
      "type": "stat",
      "title": "Completed Tasks Drift",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "abs(cockpit_completed_tasks - cockpit_completed_tasks_ledger)", "legendFormat": "drift" }
      ],
      "fieldConfig": {"defaults": {"thresholds": {"mode": "absolute","steps": [{ "color": "green", "value": 0 },{ "color": "orange", "value": 5 },{ "color": "red", "value": 10 }]}}},
      "options": {},
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 8 }
    }
  ]
}
