{
  "id": null,
  "title": "Cockpit Alerts Timeline",
  "tags": ["cockpit", "alerts", "timeline"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Alerts Lifecycle",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "ALERTS{alertstate=\"firing\"}"
        },
        {
          "expr": "ALERTS{alertstate=\"resolved\"}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      },
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 10 }
    }
  ]
}
